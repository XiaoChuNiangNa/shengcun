<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/accent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/accent"
        android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:src="@drawable/ic_left"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="返回"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible" />

    <!-- 庇护所类型显示 -->
    <TextView
        android:id="@+id/tv_shelter_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前庇护所：野外"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>

    </LinearLayout>

    <!-- 休整提示 -->
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="可以进行休整恢复状态！"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <!-- 小憩一会区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/transparent_round_bg"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小憩一会"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_rest_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="消耗：饥饿20 口渴20 | 恢复：体力20"
            android:textSize="14sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_rest_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="小憩一会"
        android:layout_marginBottom="16dp"/>

    <!-- 安心休整区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/transparent_round_bg"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="安心休整"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_rest_heavy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="消耗：饥饿40 口渴40 | 恢复：体力40"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_heavy_time_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时间限制：18:00-23:00"
            android:textSize="12sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_rest_heavy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="安心休整"
        android:layout_marginBottom="16dp"/>
</LinearLayout>