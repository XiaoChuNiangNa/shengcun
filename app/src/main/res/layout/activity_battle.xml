<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:orientation="vertical">

    <!-- 顶部标题区 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/battle_title_bg">

        <!-- 返回按钮 -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/ic_left"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="返回" />

        <!-- 地图标题 -->
        <TextView
            android:id="@+id/tv_map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="暗影森林"
            android:textColor="#2E7D32"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed" />

        <!-- 自动/手动战斗切换开关 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/switch_bg"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_manual_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手动"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginEnd="4dp" />

            <Switch
                android:id="@+id/switch_auto_battle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track" />

            <TextView
                android:id="@+id/tv_auto_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </RelativeLayout>

    <!-- 中间对战区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/battle_area_bg">

        <!-- 敌方单位 -->
        <LinearLayout
            android:id="@+id/enemy_units_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <!-- 敌方单位位置1 -->
            <FrameLayout
                android:id="@+id/enemy_card_1"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="4dp"
                android:background="@drawable/enemy_card_bg_boss"
                android:visibility="gone">

                <!-- 单位名称 -->
                <TextView
                    android:id="@+id/enemy_name_1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#9E9E9E"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- 普攻冷却条 -->
                <ProgressBar
                    android:id="@+id/enemy_attack_progress_1"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="30dp"
                    android:progress="0"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_attack" />

                <!-- 生命值条 -->
                <ProgressBar
                    android:id="@+id/enemy_health_1"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="bottom"
                    android:progress="100"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_health" />

            </FrameLayout>

            <!-- 敌方单位位置2 -->
            <FrameLayout
                android:id="@+id/enemy_card_2"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="4dp"
                android:background="@drawable/enemy_card_bg_boss"
                android:visibility="gone">

                <!-- 单位名称 -->
                <TextView
                    android:id="@+id/enemy_name_2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#9E9E9E"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- 普攻冷却条 -->
                <ProgressBar
                    android:id="@+id/enemy_attack_progress_2"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="30dp"
                    android:progress="0"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_attack" />

                <!-- 生命值条 -->
                <ProgressBar
                    android:id="@+id/enemy_health_2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="bottom"
                    android:progress="100"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_health" />

            </FrameLayout>

            <!-- 敌方单位位置3 -->
            <FrameLayout
                android:id="@+id/enemy_card_3"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="4dp"
                android:background="@drawable/enemy_card_bg_boss"
                android:visibility="gone">

                <!-- 单位名称 -->
                <TextView
                    android:id="@+id/enemy_name_3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#9E9E9E"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- 普攻冷却条 -->
                <ProgressBar
                    android:id="@+id/enemy_attack_progress_3"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="30dp"
                    android:progress="0"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_attack" />

                <!-- 生命值条 -->
                <ProgressBar
                    android:id="@+id/enemy_health_3"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="bottom"
                    android:progress="100"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_health" />

            </FrameLayout>

        </LinearLayout>

        <!-- 中间分隔线及战斗信息滚动视图 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="#F5F5F5">

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD"
                android:layout_marginHorizontal="20dp" />

            <!-- 战斗信息滚动视图 -->
            <ScrollView
                android:id="@+id/battle_log_scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/battle_log_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="战斗开始 - 暗影森林"
                    android:textColor="#37474F"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp" />

            </ScrollView>

        </LinearLayout>

        <!-- 玩家单位 -->
        <LinearLayout
            android:id="@+id/player_units_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <!-- 玩家单位位置1 -->
            <FrameLayout
                android:id="@+id/player_card_1"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="4dp"
                android:background="@drawable/player_card_bg"
                android:visibility="gone">

                <!-- 单位名称 -->
                <TextView
                    android:id="@+id/player_name_1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#E3F2FD"
                    android:text="英雄"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- 普攻冷却条 -->
                <ProgressBar
                    android:id="@+id/player_attack_progress_1"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="30dp"
                    android:progress="0"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_attack" />

                <!-- 生命值条 -->
                <ProgressBar
                    android:id="@+id/player_health_1"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="bottom"
                    android:progress="100"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_health" />

            </FrameLayout>

            <!-- 玩家单位位置2 -->
            <FrameLayout
                android:id="@+id/player_card_2"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="4dp"
                android:background="@drawable/player_card_bg"
                android:visibility="gone">

                <!-- 单位名称 -->
                <TextView
                    android:id="@+id/player_name_2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#E3F2FD"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- 普攻冷却条 -->
                <ProgressBar
                    android:id="@+id/player_attack_progress_2"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="30dp"
                    android:progress="0"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_attack" />

                <!-- 生命值条 -->
                <ProgressBar
                    android:id="@+id/player_health_2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="bottom"
                    android:progress="100"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_health" />

            </FrameLayout>

            <!-- 玩家单位位置3 -->
            <FrameLayout
                android:id="@+id/player_card_3"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_margin="4dp"
                android:background="@drawable/player_card_bg"
                android:visibility="gone">

                <!-- 单位名称 -->
                <TextView
                    android:id="@+id/player_name_3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#E3F2FD"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- 普攻冷却条 -->
                <ProgressBar
                    android:id="@+id/player_attack_progress_3"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="30dp"
                    android:progress="0"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_attack" />

                <!-- 生命值条 -->
                <ProgressBar
                    android:id="@+id/player_health_3"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_gravity="bottom"
                    android:progress="100"
                    android:max="100"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_health" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 底部控制区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#E8EAF6"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- 资源显示 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_battle_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回合: 1 | 状态: 战斗中"
                android:textColor="#37474F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_resources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="金币: 100 | 经验: 0"
                android:textColor="#37474F"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 功能按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_attack"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#F44336"
                android:text="攻击"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_skill"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#2196F3"
                android:text="技能"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_end_turn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:backgroundTint="#9C27B0"
                android:text="结束回合"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>