<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/black">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="返回" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Boss战斗"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- 战斗信息 -->
    <TextView
        android:id="@+id/tv_battle_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="战斗开始！"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/dark_blue"
        android:layout_marginBottom="16dp" />

    <!-- 对战双方信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Boss信息 -->
        <LinearLayout
            android:id="@+id/tv_boss_info"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/dark_red"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boss"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_boss_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生命: 300/300"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- VS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="VS"
            android:textSize="20sp"
            android:textColor="@color/yellow"
            android:gravity="center"
            android:layout_marginHorizontal="16dp" />

        <!-- 玩家信息 -->
        <LinearLayout
            android:id="@+id/tv_player_info"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/dark_green"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="勇士"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_player_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生命: 100/100"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- 战斗日志 -->
    <ScrollView
        android:id="@+id/battle_log_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/battle_log_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="战斗开始！\n"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="monospace" />
    </ScrollView>

    <!-- 操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_attack"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="攻击"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_skill"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="技能"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/purple"
            android:layout_marginHorizontal="8dp" />

        <Button
            android:id="@+id/btn_end_turn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="结束回合"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/orange"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>