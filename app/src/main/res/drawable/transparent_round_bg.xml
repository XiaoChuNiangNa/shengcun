<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 透明背景（alpha值80表示半透明，00完全透明，FF不透明） -->
    <solid android:color="#10000000" />
    <!-- 圆角半径（可根据需要调整） -->
    <corners android:radius="12dp" />
    <!-- 可选：添加细边框 -->
    <stroke
        android:width="1dp"
        android:color="#CCFFFFFF" /> <!-- 半透明白色边框 -->
    <!-- 内边距 -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>